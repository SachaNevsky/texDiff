\PassOptionsToClass{}{beamer}
\documentclass{exabeamer}


%\StartShownPreambleCommands
\usetheme{Madrid}  \setbeamerfont{structure}{shape=\scshape}
%\StopShownPreambleCommands

\begin{document}
\begin{frame}{Text commands}{Set text attributes} \Large
start \textbf<1->{This text is bold \ldots} end.\\
start \textit<2->{This text is italic \ldots} end.\\
start \textsl<3->{This text is slanted \ldots} end.\\
start \textrm<4->{This text is in roman \ldots} end.\\
start \textsf<5->{This text is sans serif \ldots} end.\\
start {\textcolor<6->{red!70}{This text is red \ldots}} end.\\
start \structure<7>{This text is beamer-specific} end.\\
start This text is normal \ldots\ end.
\end{frame}
\end{document}
