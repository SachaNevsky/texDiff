\begin{frame}{Examples for the three \texttt{block} commands}%
  {\texttt{block}, \texttt{alertblock} and \texttt{exampleblock}}
\begin{block}{The correct version of Pythagoras's Theorem}
   $c^2=a^2 + b^2$
\end{block}
\begin{alertblock}{The incorrect version of Pythagoras's Theorem}
   $c=a + b$
\end{alertblock}
\begin{exampleblock}{The unit ellipse}
   $\frac{x^2}{a^2}+\frac{y^2}{b^2}=1$
\end{exampleblock}
\end{frame}
