\usepackage{etex}
\setlength\parindent{0pt}
\usepackage[utf8]{inputenc}
\def\ChartDemo#1#2{%
  \psChart[shadow=true]{34.5,17.2,20.7,15.5,5.2,6.9}{#1}{#2}
    \ncline{psChartO1}{psChart1} \nput{0}{psChartO1}{1000 (34.5\%)}
    \ncline{psChartO2}{psChart2} \nput{150}{psChartO2}{500 (17.2\%)}
    \ncline{psChartO3}{psChart3} \nput{-90}{psChartO3}{600 (20.7\%)}
    \ncline{psChartO4}{psChart4} \nput{0}{psChartO4}{450 (15.5\%)}
    \ncline{psChartO5}{psChart5} \nput{0}{psChartO5}{150 (5.2\%)}
    \ncline{psChartO6}{psChart6} \nput{0}{psChartO6}{200 (6.9\%)}
    \bfseries%
    \rput(psChartI1){Taxes}
    \rput(psChartI2){Rent}
    \rput(psChartI3){Bills}
    \rput(psChartI4){Car}
    \rput(psChartI5){Gas}
    \rput(psChartI6){Food}}

%\StartShownPreambleCommands
\usepackage{pstricks-add}% See hidden preamble for definition oc \ChartDemo
%\StopShownPreambleCommands

\begin{document}
\begin{frame}{Demonstration of \texttt{PSTricks}}
\begin{center}
\begin{pspicture}(-4,-4)(4,4)
\psset{userColor={red!30,green!30,blue!40,gray,cyan!50,magenta!60,cyan},
  chartSep=20pt,shadowsize=5pt,nodesepA=5pt,nodesepB=-10pt}
\only<1>{\ChartDemo{1}{2}} \only<2>{\ChartDemo{2}{2}}
\only<3>{\ChartDemo{3}{2}} \only<4>{\ChartDemo{4}{2}}
\only<5>{\ChartDemo{5}{2}} \only<6>{\ChartDemo{6}{2}}
\end{pspicture}
\end{center}
\end{frame}
\end{document}
