\PassOptionsToClass{}{beamer}
\documentclass{exabeamer}
\usepackage[utf8]{inputenc}

%\StartShownPreambleCommands
\newcounter{definition}[section]
\resetcounteronoverlays{definition}
\setbeamertemplate{theorem begin}{% depends on theorem
  \refstepcounter{definition}%
  \begin{\inserttheoremblockenv}{\inserttheoremname~\thesection.\thedefinition
    \ifx\relax\inserttheoremaddition\relax\else\ (\inserttheoremaddition)\fi}}
%\StopShownPreambleCommands

\begin{document}
\section{foo} \Large
\begin{frame}{Numbered theorem and definition environments}
\begin{definition}[The ``foobarbaz'' definition]
  foo bar baz
\end{definition}
\begin{theorem}[The ``foobarbaz'' theorem]
  foo bar baz
\end{theorem}
\begin{proof}
  foo bar baz
\end{proof}
\begin{example}[The ``foobarbaz'' example]
  foo bar baz
\end{example}
\end{frame}
\end{document}
