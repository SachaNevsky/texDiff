\onslide*{4-}{\nccurve[linecolor=green,angleB=-90]{->}{c}{ce}}
\onslide*{5-}{\nccurve[linecolor=cyan,angleB=-90]{->}{d}{de}}
\onslide*{6-}{\nccurve[linecolor=yellow,angleB=-90]{->}{e}{ee}}
