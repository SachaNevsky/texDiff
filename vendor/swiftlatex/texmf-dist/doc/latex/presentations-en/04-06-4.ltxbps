\begin{frame}{Right-angled triangle}
\onslide<-6,8>{Pythagoras's theorem\ldots }
\begin{align*} \onslide<8>{a^2+b^2 &= c^2}\\
  \onslide<2->{\rnode{A}{\texttt{side}}^2} \onslide<3->{ + }
  \onslide<4->{\rnode{B}{\texttt{side}}^2} \onslide<5->{ &= }
  \onslide<6->{\rnode{C}{\texttt{hypotenuse}}^2} \end{align*}
\onslide<7>{in words:}\par \onslide<8>{In a right-angled triangle,
the square on the \rnode{h}{hypotenuse} is equal to
the sum of the squares on the other two \rnode{k}{sides}!
  \nccurve{->}{k}{A}\nccurve{->}{k}{B}\nccurve{->}{h}{C}}
\end{frame}
