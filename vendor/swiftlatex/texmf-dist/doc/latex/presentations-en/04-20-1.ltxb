\PassOptionsToClass{}{beamer}
\documentclass{exabeamer}
\AtBeginDocument{\Huge}% only for demo

%\StartShownPreambleCommands
\defbeamertemplate{list item}{rarrow}{$\rightarrow$}
\defbeamertemplate{list item}{Rarrow}{$\Rightarrow$}\setbeamertemplate{list item}[rarrow]{}
\newcounter{bcnt}
\newenvironment{bList}{\list{\usebeamertemplate{list item}}{\usecounter{bcnt}}}{\endlist}
%\StopShownPreambleCommands

\begin{document}
\begin{frame}{foo}{bar}
\begin{columns}[t]\begin{column}{0.3\textwidth}
\begin{bList} \item foo \item bar \end{bList}
\end{column} \setbeamertemplate{list item}[Rarrow]{}
\begin{column}{0.3\textwidth}
\begin{bList} \item foo \item bar \end{bList}
\end{column}
\addtobeamertemplate{list item}{\thebcnt: }{}
\begin{column}{0.3\textwidth}
\begin{bList} \item foo \item bar \end{bList}
\end{column}\end{columns}
\end{frame}
\end{document}
