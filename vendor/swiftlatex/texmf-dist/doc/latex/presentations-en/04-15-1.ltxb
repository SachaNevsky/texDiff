\begin{document}
\begin{frame}{Hyperlinks and targets}
\begin{itemize}
  \item<1-> First point.
  \item<2> \hyperlink{point4}{\beamergotobutton{to point 4}}
  \item<3-> Third point.
  \item<4-> \hypertarget<4>{point4}{}Fourth point.
\end{itemize}
\invisible<2>{\hyperlink{point2}{\beamergotobutton{to point 2}}}
\invisible<3>{\hyperlink{point3}{\beamergotobutton{to point 3}}}
\hypertarget<2>{point2}{} \hypertarget<3>{point3}{}
\hyperlink{slide<2>}{\beamergotobutton{next slide}}
\end{frame}
\begin{frame}[label=slide2]{second slide with a link target}
foo \pause bar
\end{frame}
