\PassOptionsToClass{}{beamer}
\documentclass{exabeamer}
\usepackage[utf8]{inputenc}
\setbeamercolor*{background canvas}{bg=black!30}
\setbeamercolor*{normal text}{fg=white}

%\StartShownPreambleCommands
\documentclass{beamer}
\newcommand\TeXt{The first step in designing your own colour scheme is to
choose a base colour. The base colour could be one of your favourite colours,
a colour suggested by your environment, a colour to help convey the
appropriate mood, or a colour following trends.\par}
%\StopShownPreambleCommands

\begin{document}
\begin{frame}{Bright text colour}{}
\begin{columns}[t]
\begin{column}{0.45\linewidth}
\TeXt \bigskip
\vfill\tiny \TeXt
\end{column}
\begin{column}{0.45\linewidth}\color{black}
\TeXt \bigskip
\vfill\tiny \TeXt
\end{column}
\end{columns}
\end{frame}

\setbeamercolor{background canvas}{bg=black!10}
\begin{frame}{Darker text colour}{Lighter background}
\color{blue!60!white}
\begin{columns}[t]
\begin{column}{0.45\linewidth}
\TeXt \bigskip
\vfill\tiny \TeXt
\end{column}
\begin{column}{0.45\linewidth}\color{black}
\TeXt \bigskip
\vfill\tiny \TeXt
\end{column}
\end{columns}
\end{frame}
\end{document}
