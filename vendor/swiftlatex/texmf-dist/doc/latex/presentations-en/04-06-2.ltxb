\begin{frame}{Line-by-line control of a table}{The \textbackslash pause command}
\rowcolors[]{1}{blue!40}{blue!10}
\begin{tabular}{@{} >{\ttfamily}l l l @{}}
\rowcolor{gray}\bfrm{suffix} & \bfrm{meaning}& \bfrm{description}\\
aux & auxiliary     & contains references etc.         \pause \\
bbl & bibliography  & contains the bibliography        \pause \\
bib & bibtex        & contains the citation database   \pause \\
blg & bibliography log & log of a Bib\TeX\ run         \pause \\
cfg & config        & configuration file               \pause \\
clo & class options & class options                    \pause \\
cls & class         & document class file                     \\
\end{tabular}
\end{frame}
\begin{frame}{Column-by-column control of a table}{The \textbackslash onslide command}
\rowcolors[]{1}{blue!40}{yellow!20}
\begin{tabular}{@{} >{\ttfamily}l<{\onslide<2->} l<{\onslide<3->} l<{\onslide}@{}}
\rowcolor{gray}\bfrm{suffix} & \bfrm{meaning}& \bfrm{description}\\
aux & auxiliary     & contains references etc.      \\
bbl & bibliography  & contains the bibliography     \\
bib & bibtex        & contains the citation database\\
blg & bibliography log & log of a Bib\TeX\ run      \\
cfg & config        & configuration file            \\
clo & class options & class options                 \\
cls & class         & document class file
\end{tabular}
\end{frame}
\begin{frame}{Line-by-line control of a table}{The \textbackslash onslide command}
