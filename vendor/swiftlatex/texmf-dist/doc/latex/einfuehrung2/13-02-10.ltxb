\visible<5>{\color{cyan}\Text[5]}
\end{frame}
\setbeamercovered{dynamic}
\begin{frame}{Das Makro \texttt{invisible}} \Huge
\invisible<2->{\Text}      \\ \invisible<1,3->{\Text[2]} \\
\invisible<-2,4->{\Text[3]}\\ \invisible<5>{\Text[4]}    \\
\invisible<-4>{\Text[5]}
\end{frame}
