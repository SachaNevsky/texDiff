      "\hyperindexformat{" :sep "; " :close "}{}")

(markup-locref :open "\hyperpage{" :close "}")

(markup-locref-list :sep ", ")
(markup-locclass-list :open "\hspace*{\fill}\nobreakspace" :close "" )

(define-attributes (("gobble" "default")))
