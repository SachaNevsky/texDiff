\ttfamily\small
\only<second:0>{AWK=`which gawk` || AWK=`which awk`}
\only<second>{ \quad\ldots Festlegung des AWK-Programms} \pause

\only<second:0>{\$AWK -f undo-bibtex-linebreaks.awk \$MAIN.bbl > \$MAIN.bbl-tmp}
\only<second>{ \quad\ldots bbl-Datei bearbeiten} \pause

\only<second:0>{mv \$MAIN.bbl-tmp \$MAIN.bbl}
\only<second>{ \quad\ldots Datei zurückkopieren}
