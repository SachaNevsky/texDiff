\usepackage{pstricks-add}
\newlength\offset \newcount\Angle


\begin{document}
\begin{frame}{Demonstation von \texttt{\textbackslash animate}}
\begin{center}
\animate<2-90>
\animatevalue<1-90>{\offset}{-7.75cm}{0cm}
\animatevalue<1-90>{\Angle}{360}{0}
\begin{pspicture}(-4,-1)(4.2,4.5)
\rput{\the\Angle}(\the\offset,-\the\offset){%
  \psframe*[linecolor=red!30,opacity=0.5](-4,-1)(4.2,4.5)
  \psplot[linewidth=2pt,linecolor=blue,algebraic]{-2}{2}{x^2}
  \psaxes[arrows=->](0,0)(-2,0)(2,4)[x,0][y,90]}
\end{pspicture}
\end{center}
\end{frame}
