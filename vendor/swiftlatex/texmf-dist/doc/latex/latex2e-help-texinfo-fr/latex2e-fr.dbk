<!-- @section @code{\startbreaks} -->
<!-- @findex \startbreaks -->
<!-- -->
<!-- @code{\startbreaks} -->
<!-- -->
<!-- Used after une commande @code{\stopbreaks} to allow page breaks again. -->
<!-- -->
