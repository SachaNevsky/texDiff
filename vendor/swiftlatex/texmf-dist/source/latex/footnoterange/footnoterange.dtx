     (or \string\renewcommand\string{\string\fnr@rangefootnotemark\string}\MessageBreak%
     with your own fixing code).%
    }%
  \xdef\fnr@mopt{#1}%
  \ifx\fnr@mopt\empty%
    \fnr@origfnmark%
  \else%
    \fnr@origfnmark[#1]%
  \fi%
}

