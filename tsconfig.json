{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [ "ES2020", "DOM" ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "./",
        "rootDir": "./",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [ "main.ts" ],
    "exclude": [ "node_modules" ]
}